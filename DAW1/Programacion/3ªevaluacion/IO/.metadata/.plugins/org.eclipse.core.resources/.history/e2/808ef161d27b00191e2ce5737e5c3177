import static org.junit.Assert.*;

import java.util.Arrays;
import java.util.Collection;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Parameterized;
import org.junit.runners.Parameterized.Parameters;

@RunWith(Parameterized.class)
public class NuevaHoraTest {

	private int hora;
	private int min;
	private int sec;
	
	public NuevaHoraTest(int hora, int min, int sec) {
		this.hora = hora;
		this.min = min;
		this.sec = sec;
	}
	
	@Test
	public void testNuevaHora() {
		Hora h = new Hora(this.hora,this.min,this.sec);
		Hora h2 = h.nuevaHora();
		assertEquals(0,h.compareTo(h2));
	}
	
	@Parameters
	public static Collection<Object[]> horas(){
		return Arrays.asList(new Object[][] {
			{-1,-1,-1},{23,59,59},{0,0,59},{1,1,1}
		});
		
	}

}
