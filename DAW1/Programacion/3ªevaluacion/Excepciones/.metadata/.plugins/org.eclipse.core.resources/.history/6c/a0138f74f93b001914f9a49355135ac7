package ejercicio2;

public class Reloj {

	private int hora;
	private int minutos;
	private int segundos;
	private int formato;
	
	public Reloj(int hora, int minutos, int segundos, int formato) {
		super();
		this.hora = hora;
		this.minutos = minutos;
		this.segundos = segundos;
		this.formato = formato;
	}
	
	public void validarHora(Object o) throws Exception {
		Reloj r = (Reloj)o;
		if(this.hora > 24) {
			throw new Exception();
		}else if(this.minutos > 60) {
			throw new Exception();
		}else if(this.segundos > 60) {
			throw new Exception();
		}
	}

	public int getHora() {
		return hora;
	}

	public int getMinutos() {
		return minutos;
	}

	public int getSegundos() {
		return segundos;
	}

	@Override
	public String toString() {
		// TODO Auto-generated method stub
		if(this.formato == 12 && this.hora > 12) {
			return (hora-12) + ":" + minutos + ":" + segundos + "pm";
		}else if(this.formato == 12) {
			return hora + ":" + minutos + ":" + segundos + "am";
		}
		return hora + ":" + minutos + ":" + segundos;
	}
	
	
	
	
}
