package ejercicio3;

public class Fecha {

	private int dia;
	private int mes;
	private int anyo;
	
	public Fecha(int dia, int mes, int anyo) {
		super();
		this.dia = dia;
		this.mes = mes;
		this.anyo = anyo;
	}

	public int getDia() {
		return dia;
	}

	public int getMes() {
		return mes;
	}

	public int getAnyo() {
		return anyo;
	}

	@Override
	public String toString() {
		return dia + "/" + mes + "/" + anyo;
	}
	
	public void validarFecha() {
		
		if(this.mes > 12) {
			throw Exception("Mes no válido");
		}else if(this.dia > 31) {
			throw Exception("Día no válido");
		}
	}
	
	
	
}
